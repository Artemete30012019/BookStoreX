@{
	ViewBag.Title = "Доставка";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

	<div>
			<h3>Форма покупки</h3>
			<form method="post" action="">
				<input type="hidden" value="@ViewBag.BookId" name="BookId"/>
				<table>
					<tr>
						<td><p>Введите ваше имя: </p></td>
						<td><input type="text" name="PersonName"/></td>
					</tr>
					<tr>
						<td><p>Введите адрес доставки: </p></td>
						<td><input type="text" name="PersonAddress"/></td>
					</tr>
					<tr>
						<td><input type="submit" value="Сделать заказ"/></td>
					</tr>
				</table>
			</form>
	</div>

